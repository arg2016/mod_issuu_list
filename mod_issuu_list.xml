<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1.0" client="site" method="upgrade">
    <name>Issuu publication list</name>
    <author>alexis aguilar</author>
    <version>1.0.0</version>
    <description>Mostrar el listado de las publicaciones de una cuenta en Issuu</description>
    <files>
        <filename>mod_issuu_list.xml</filename>
        <filename module="mod_issuu_list">mod_issuu_list.php</filename>
        <filename>index.html</filename>
        <filename>helper.php</filename>
        <folder>tmpl</folder>

    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                    name="layout"
                    type="modulelayout"
                    label="JFIELD_ALT_LAYOUT_LABEL"
                    description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
            </fieldset>
        </fields>
    </config>
</extension>